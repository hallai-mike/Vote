<% provide(:title, "Edit Issue") %>
<h1>Update this Issue</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@issue) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :desc1 %>
      <%= f.text_area :desc1, class: 'form-control' %>
      
      <%= f.label :desc2 %>
      <%= f.text_area :desc2, class: 'form-control' %>

      <%= f.label :type %>
      <%= f.text_field :type, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>