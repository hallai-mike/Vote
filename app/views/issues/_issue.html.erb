<tr id="issue-<%= issue.id %>">
  <td class="title"><%= link_to issue.title, issue %></td>
  <td class="timestamp"><%= time_ago_in_words(issue.created_at) %> ago</td>
  <td><% if current_user.admin? %>
      <%= link_to "Delete", issue, method: :delete,
      data: { confirm: "Are you sure you want to delete this issue?" } %>
    <% end %>
  </td>
</tr>