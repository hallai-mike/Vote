<% provide(:title, @issue.title) %>

<%= link_to "Back to Issues", root_url, class: "btn btn-info back-btn" %>

<div id="issue_info">

  <h3 class="bold center"><%= @issue.title %></h3>

  <div id="issue_desc1" class="issue-info">
    <label>Description 1: </label>
    <%= simple_format(@issue.desc1) %>
  </div>

  <div id="issue_desc2" class="issue-info">
    <label>Description 2: </label>
    <%= simple_format(@issue.desc2) %>
  </div>

  <p class="issue-info"><label>Created: </label><%= @issue.created_at.strftime("%I:%M%p %m/%d/%Y") %></p>

  <p class="issue-info"><label>Last Updated: </label><%= @issue.updated_at.strftime("%I:%M%p %m/%d/%Y") %></p>
  
  <p class="issue-info"><label><%= link_to "Edit Issue", edit_issue_path %></label></p>

  <p class="issue-info"><label>
    <% if current_user.admin? %>
      <%= link_to "Delete Issue", @issue, method: :delete,
      data: { confirm: "Are you sure you want to delete this issue?" } %>
    <% end %>
  </label></p>

</div>

<div id="option_list_block">
  <ul class="options">
    <% if @issue.options.any? %>
      <h4>Options (<%= @issue.options.count %>)</h4>
      <%= render @issue.options %>
    <% end %>
  </ul>
  <section class="ticket_form">
    <%= render 'shared/option_form' %>
  </section>
</div>