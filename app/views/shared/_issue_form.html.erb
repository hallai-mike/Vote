<%= form_for(@issue) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <label>Title</label><%= f.text_field :title, placeholder: "", :autocomplete => :off %>
  </div>
  <div class="field">
    <%= f.text_area :desc1, placeholder: "Description 1...", :autocomplete => :off %>
  </div>
  <div class="field">
    <%= f.text_area :desc2, placeholder: "Description 2...", :autocomplete => :off %>
  </div>
  <%= f.submit "Create Issue", class: "btn btn-primary" %>
<% end %>