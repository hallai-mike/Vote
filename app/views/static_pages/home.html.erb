<% if logged_in? %>
  <% if current_user.admin? %>
    <aside class="col-md-4">
      <section class="issue_form">
        <h1>Create New Issue</h1>
        <%= render 'shared/issue_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Active Issues</h3>
      <ul style="list-style: none;">
        <%= render 'shared/feed' %>
      </ul>
    </div>

  <% else %>
    <h2>Ballot</h2>
    <ul style="list-style: none;">
      <% @ballot.each do |issue| %>
        <%= render partial: 'issues/form', locals: { issue: issue } %>
      <% end %>
    </ul>
  <% end %>

<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Voting App</h1>

    <h2>
      This is the home page.
    </h2>

    <%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>