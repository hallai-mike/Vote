<% if logged_in? %>
  <% if current_user.admin? %>
    <aside class="col-md-4">
      <section class="issue_form">
        <h3>Create New Issue</h3>
        <%= render 'shared/issue_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Active Issues</h3>
      <ul style="list-style: none;">
        <%= render 'shared/feed' %>
      </ul>
    </div>

  <% else %>
    <h2 class = "center">Current Ballot</h2>
    <h4 class = "center grey">Issues you have already voted on are not shown.</h4>
    <ul style="list-style: none;">
      <% @ballot.each do |issue| %>
        <%= render partial: 'issues/form', locals: { issue: issue } %>
      <% end %>
    </ul>
  <% end %>

<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Voting App</h1>

    <h3 class="grey">By Mike Hallai</h3>

    <%= link_to "Create an Account", signup_path, class: "btn btn-lg btn-primary" %>
     OR 
    <%= link_to "Log In", login_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>